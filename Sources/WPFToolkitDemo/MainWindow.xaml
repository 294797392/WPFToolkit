<Window x:Class="WPFToolkitDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:demo="clr-namespace:WPFToolkitDemo"
        xmlns:biz="clr-namespace:WPFToolkit.Business.Controls;assembly=WPFToolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <biz:BusinessMainMenu Grid.Column="0" ConfigFile="menu.json" Orientation="Vertical"
                                  SelectedIndex="0"
                                  ContentContainer="{Binding ElementName=ContentControl}"
                                  />

            <ContentControl Grid.Column="2" x:Name="ContentControl"/>

        </Grid>

    </Grid>
</Window>
