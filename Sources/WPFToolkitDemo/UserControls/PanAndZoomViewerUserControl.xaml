<UserControl x:Class="WPFToolkitDemo.UserControls.PanAndZoomViewerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFToolkitDemo.UserControls"
             xmlns:toolkitcontrols="clr-namespace:WPFToolkit.Controls;assembly=WPFToolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <toolkitcontrols:PanAndZoomViewer ClipToBounds="True">
            <Border Background="Gray">
                <Image Source="../Images/1.jpg" Stretch="Fill" Width="100" Height="100"/>
            </Border>
        </toolkitcontrols:PanAndZoomViewer>
    </Grid>
</UserControl>
